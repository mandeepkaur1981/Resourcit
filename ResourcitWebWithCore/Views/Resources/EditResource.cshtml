@model ExtendResourceInfo
@{
    ViewData["Title"] = "Edit Resource";
}

<h1>Edit Resource</h1>

<h4>Resource</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Resources" asp-action="EditResource">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="ResourceId" class="control-label"></label>
                    <input asp-for="ResourceId" class="form-control" />
                    <span asp-validation-for="ResourceId" class="text-danger"></span>
                </div>*@
            <input type="hidden" asp-for="@Model.resource.ResourceId" class="form-control" />
            <div class="form-group row">
                <label asp-for="@Model.resource.Lastname" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="@Model.resource.Lastname" class="form-control" />
                    <span asp-validation-for="@Model.resource.Lastname" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="@Model.resource.Firstname" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="@Model.resource.Firstname" class="form-control" />
                    <span asp-validation-for="@Model.resource.Firstname" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <label asp-for="@Model.resource.Middlename" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="@Model.resource.Middlename" class="form-control" />
                    <span asp-validation-for="@Model.resource.Middlename" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <label asp-for="@Model.resource.Hiredate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="@Model.resource.Hiredate" class="form-control" />
                    <span asp-validation-for="@Model.resource.Hiredate" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <label asp-for="@Model.resource.Termdate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="@Model.resource.Termdate" class="form-control" />
                    <span asp-validation-for="@Model.resource.Termdate" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <label asp-for="ProfilePhoto" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="ProfilePhoto" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
            @*<img style="width:20%" src="https://localhost:44364/images/20191008_201340.jpg" />*@


            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark" />
            </div>

        </form>

    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

<script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
</script>


