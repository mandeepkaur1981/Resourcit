@model IEnumerable<Project>
@{
    ViewData["Title"] = "List of projects";
}

<h1>List of projects</h1>
<a class="btn btn-dark m-2" asp-controller="Projects" asp-action="AddProject">Add Project</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr class="List-header">
            <th scope="col">Id</th>
            <th scope="col">Description</th>
            <th scope="col">Short Description</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Budget</th>
            <th scope="col" width="200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in @Model)
        {
        <tr>
            <th scope="row">@project.ProjectId</th>
            <td>@project.Description</td>
            <td>@project.ShortDescription</td>
            <td>@project.Startdate.ToShortDateString()</td>
            <td>@project.Enddate.ToShortDateString()</td>
            <td>@project.Budget</td>
            <td style="text-align:center">
                <form method="post" asp-controller="Projects" asp-action="DeleteProject" asp-route-id="@project.ProjectId">

                    <a class="btn btn-dark m-2" asp-controller="Projects" asp-action="EditProject" asp-route-projectId="@project.ProjectId">Edit</a>
                    <button type="button" class="btn btn-dark m-2" data-toggle="modal" data-target="#exampleModal_@project.ProjectId">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal_@project.ProjectId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-light">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation Window</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this project?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                    <button type="submit" class="btn btn-primary">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>



